<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    <Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="App.LecturePage"
    mc:Ignorable="d"
    Title="{Binding Titre}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Titre}" FontSize="36" FontWeight="Bold" />
            <TextBlock Text="{Binding Auteur}" FontSize="18" />
            <TextBlock Text="Progression de lecture: {Binding ProgressionLecture}%" FontSize="16" />
            <TextBlock Text="Nombre de pages lues: {Binding NombrePagesLues}/{Binding NombrePages}" FontSize="16" />
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <TextBlock Text="{Binding Texte}" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
    </Page>

</ContentPage>