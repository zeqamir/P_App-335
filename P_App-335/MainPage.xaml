<?xml version="1.0" encoding="utf-8" ?>
<ContentPage>
    <Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="App.MainPage"
    mc:Ignorable="d"
    Title="Page Bite"
    Background="{StaticResource AppBackgroundBrush}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Page Bite" FontSize="36" FontWeight="Bold" />
            </StackPanel>

            <ItemsControl Grid.Row="1" ItemsSource="{Binding Livres}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Titre}" Command="{Binding OuvrirLivreCommand}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Page>


</ContentPage>
